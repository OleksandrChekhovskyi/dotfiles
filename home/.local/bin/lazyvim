#!/usr/bin/env bash

# Requires the lazyvim config to be checked out at ~/.config/lazyvim
# See: https://github.com/OleksandrChekhovskyi/lazyvim

config_dir="${XDG_CONFIG_HOME:-$HOME/.config}/lazyvim"
if [[ ! -d "$config_dir" ]]; then
  echo "Error: lazyvim config not found at $config_dir" >&2
  echo "Clone the config repo there first." >&2
  exit 1
fi

NVIM_APPNAME=lazyvim exec nvim "$@"
